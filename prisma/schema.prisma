model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  // role      Role     @default(USER)
  role      String   @default("USER") // <-- Add this line
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}


model Collection {
  id       String  @id @default(cuid())
  name     String
  slug     String  @unique
  imageUrl String?
  dishes   Dish[]
}

model Restaurant {
  id             String         @id @default(cuid())
  name           String
  address        String
  imageUrl       String? 
  phoneNumber    String? 
  openTime       String? 
  closeTime      String? 
  ratings        Float?
  ratingCount    Int?
  dishes         Dish[]
  cuisines       Cuisine[]      @relation("RestaurantCuisines")
  menuCategories MenuCategory[]
}

model MenuCategory {
  id           String     @id @default(cuid())
  name         String
  count        Int
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String
  items        MenuItem[]
}

model MenuItem {
  id         String       @id @default(cuid())
  name       String
  price      Float
  tag        String?
  category   MenuCategory @relation(fields: [categoryId], references: [id])
  categoryId String
}

model Dish {
  id           String     @id @default(cuid())
  name         String
  price        Int
  imageUrl     String?
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId String 
  collection   Collection @relation(fields: [collectionId], references: [id])
  collectionId String
}

model Cuisine {
  id          String       @id @default(cuid())
  name        String       @unique
  restaurants Restaurant[] @relation("RestaurantCuisines")
}
